<%= simple_form_for card, url: cards_path do |f| %>
  <div data-turbo="false">
    <div class="row">
      <div class="col-md-4">
        <div class="form-group">
          <%= f.label :description, "Descrição" %>
          <%= f.input :description, label: false, input_html: { class: 'form-control' } %>
        </div>    
      </div>
      <div class="col-md-4">
        <div class="form-group">
          <%= f.label :flag, "Bandeira" %>
          <%= f.input :flag, label: false, input_html: { class: 'form-control' } %>
        </div>
      </div>
      <div class="col-md-4">
        <div class="form-group">
          <%= f.label :limit, "Limite" %>
          <%= f.input :limit, label: false, input_html: { class: 'form-control day-month' } %>
        </div>
      </div>
    </div>
    <div class="row">
      <div class="col-md-6">
        <div class="form-group">
          <%= f.label :closure, "Dia de Fechamento" %>
          <%= f.input :closure, label: false, input_html: { class: 'form-control day-month' } %>
        </div>
      </div>
      <div class="col-md-6">
        <div class="form-group">
          <%= f.label :expiration, "Dia do Vencimento" %>
          <%= f.input :expiration, label: false, input_html: { class: 'form-control' } %>
        </div>
      </div>
    </div>
    <%= f.submit "Salvar", class: 'btn btn-success' %>
  </div>
<% end %>