<%= form_with(model: card) do |f| %>
  <div data-turbo="false">
    <div class="row">
      <div class="col-md-12">
        <div class="form-group">
          <%= f.label :description, 'Descrição' %>
          <%= f.text_field :description, class: 'form-control', placeholder: 'Whey Protein - Growth' %>
        </div>    
        <div class="form-group">
          <%= f.label :flag, 'Bandeira' %>
          <%= f.text_field :flag, class: 'form-control', placeholder: 'Mastercard' %>
        </div>
        <div class="form-group">
          <%= f.label :limit, 'Limite' %>
          <%= f.text_field :limit, class: 'form-control', placeholder: 'R$ 1.540' %>
        </div>
      </div>
    </div>
    <div class="row">
      <div class="col-md-6">
        <div class="form-group">
          <%= f.label :closure, 'Dia de Fechamento' %>
          <%= f.text_field :closure, class: 'form-control', placeholder: '25' %>
        </div>
      </div>
      <div class="col-md-6">
        <div class="form-group">
          <%= f.label :expiration, 'Dia do Vencimento' %>
          <%= f.text_field :expiration, class: 'form-control', placeholder: '05' %>
        </div>
      </div>
    </div>
    <%= f.submit "Salvar", class: 'btn btn-success' %>
  </div>
<% end %>