<%= simple_form_for category do |f| %>
  <div data-turbo="false">
    <div class="row">
      <div class="col-md-12">
        <div class="form-group">
          <%= f.label :name, "Name" %>
          <%= f.input :name, label: false, input_html: { class: 'form-control' } %>
        </div>    
      </div>
    </div>
    <div class="row">
      <div class="col-md-12">
        <div class="form-group">
          <%= f.label :icon, "Ícone" %>
          <%= f.collection_select :icon, Icon.all, :value, :name, { include_blank: 'Selecione' }, :required => true, class:"form-control"  %>
        </div>
      </div>
    </div>
    <div class="row">
      <div class="col-md-12">
        <div class="form-group">
          <%= f.label :color, "Cor" %>
          <%= f.input :color, label: false, input_html: { class: 'form-control day-month' } %>
        </div>
      </div>
    </div>
    <%= f.submit "Salvar", class: 'btn btn-success' %>
  </div>
<% end %>